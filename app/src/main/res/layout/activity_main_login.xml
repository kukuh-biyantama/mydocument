<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginResponse.MainLoginActivity">

    <!--text-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/abuabu"
        android:text="@string/judulLogin"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:ignore="MissingConstraints" />

    <!--image-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="146dp"
        android:layout_height="134dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/login"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <!--editText Email-->
    <com.dicoding.mystoryapps_submission.CustomView.Login.myFormEmailLogin
        android:id="@+id/myFormEmailLogin"
        android:inputType="textEmailAddress"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        tools:ignore="SpeakableTextPresentCheck" />

    <!--editText password-->
    <com.dicoding.mystoryapps_submission.CustomView.Login.myFormPasswordLogin
        android:id="@+id/myPasswordLogin"
        android:layout_width="348dp"
        android:inputType="textPassword"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFormEmailLogin"
        tools:ignore="SpeakableTextPresentCheck" />

    <!--progress bar-->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

    <!--button-->
    <com.dicoding.mystoryapps_submission.CustomView.Login.myFormButtonLogin
        android:id="@+id/my_button_login"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myFormEmailLogin"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>